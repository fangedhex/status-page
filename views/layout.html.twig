<!doctype html>
<html>
	<head>
		<title>Status</title>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet"/>
		<link rel="stylesheet" href="/font.css" type="text/css"/>
	</head>
	<body>
		<div class="container mx-auto m-2">
			<h1 class="text-5xl m-4">Status</h1>
			<div class="space-y-4">
				{% for group, services in groups %}
					<span class="block p-1 bg-gray-100 ring ring-gray-200 rounded">
						<h2 class="text-2xl m-1">{{ group }}</h2>
						{% for service in services %}
							{% set color = service.available ? "green" : "red" %}
							<span class="block m-2 p-1 bg-{{ color }}-100 ring ring-{{ color }}-200 rounded">
								{{ service.name }}
								{% if service.lastUpdate is not empty %}
									<small class="block">Last updated:
										{{ service.lastUpdate }}</small>
								{% endif %}
							</span>
						{% endfor %}
					</span>
				{% endfor %}
			</div>
		</div>
	</body>
</html>
